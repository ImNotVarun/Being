<script>


    let slideIndex = 0;
    const totalSlides = document.querySelectorAll('.slides video').length;

    function showSlides() {
        let slides = document.querySelectorAll('.slides video');
        for (let i = 0; i < slides.length; i++) {
            slides[i].style.transform = 'translateX(-' + slideIndex + '00%)';
        }
    }

    function prevSlide() {
        slideIndex = (slideIndex - 1 + totalSlides) % totalSlides;
        showSlides();
    }

    function nextSlide() {
        slideIndex = (slideIndex + 1) % totalSlides;
        showSlides();
    }

    showSlides(); // Initial slide display


    document.getElementById('modeToggle').addEventListener('click', function () {
        document.body.classList.toggle('dark-mode');
        document.body.classList.toggle('light-mode');
    });


    var phrases = ["Transcedental Meditation", "Quick Quiz", "And Many More.."]; // Add your phrases here
    var index = 0;
    var speed = 100; // Time between typing each character in milliseconds

    function typeText(text, index) {
        var elem = document.getElementById('text');
        if (index < text.length) {
            elem.textContent += text.charAt(index);
            setTimeout(function () {
                typeText(text, index + 1);
            }, speed);
        } else {
            setTimeout(function () {
                clearText(text);
            }, 200); // Time to display each completed text before clearing
        }
    }


    //blinking text
    function clearText(text) {
        var elem = document.getElementById('text');
        var len = elem.textContent.length;
        if (len > 0) {
            elem.textContent = text.substring(0, len - 1);
            setTimeout(function () {
                clearText(text);
            }, speed / 2); // Backspace speed
        } else {
            index = (index + 1) % phrases.length; // Move to the next phrase
            setTimeout(function () {
                typeText(phrases[index], 0);
            }, 1000); // Delay before typing the next text
        }
    }

    window.onload = function () {
        typeText(phrases[index], 0);
    };
    document.getElementById('toggle-btn').addEventListener('click', function () {
        document.body.classList.toggle('night-mode');

        // Save user preference (optional)
        if (document.body.classList.contains('night-mode')) {
            localStorage.setItem('nightModeEnabled', 'true');
        } else {
            localStorage.removeItem('nightModeEnabled');
        }
    });



    // Go To Top button
    document.addEventListener('DOMContentLoaded', function () {
        var goToTopBtn = document.getElementById('goToTopBtn');

        // Show/hide the button based on scroll position
        window.onscroll = function () {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                goToTopBtn.style.display = "block";
            } else {
                goToTopBtn.style.display = "none";
            }
        };

        // Scroll to the top when the button is clicked
        goToTopBtn.addEventListener('click', function () {
            document.body.scrollTop = 0; // For Safari
            document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
        });
    });
</script>

